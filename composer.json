{
    "name": "pusher/pusher-rest",
    "type": "library",
    "description": "Client code for the REST API",
    "keywords": ["pusher", "http", "rest", "web service"],
    "homepage": "https://github.com/pusher/pusher-rest-php/",
    "license": "MIT",

    "require": {
        "php": ">=5.2",
        "ext-json": "*"
    },

    "suggest": {
        "ext-curl": "Pusher will use specific adapters if cURL is present"
    },

    "require-dev": {
        "ext-curl": "*",
        "phpunit/phpunit": "~4.0"
    },

    "autoload": {
        "psr-4": {
            "PusherREST\\": "src/"
        },
        "files": ["src/functions.php"]
    },

    "autoload-dev": {
        "psr-4": {
            "PusherREST\\Tests\\": "tests/"
        }
    }
}
